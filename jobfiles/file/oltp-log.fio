[global]
time_based=1
ramp_time=${ramptime}
runtime=${runtime}
direct=1
ioengine=libaio
random_generator=lfsr
randseed=0
refill_buffers=1
norandommap
randrepeat=1
per_job_logs=0
group_reporting
filename=${fiotarget}
[oltp-log]
rw=rw
rwmixread=20
bs=8k
iodepth=32
filesize=${filesize}
numjobs=16
latency_target=1ms
latency_window=5s
latency_percentile=99.99999
write_bw_log=results/${curjob}/write.results
write_iops_log=results/${curjob}/write.results
write_lat_log=results/${curjob}/write.results